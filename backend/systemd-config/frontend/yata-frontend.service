[Unit]
Description=YATA Frontend Service (Production)
After=network.target

[Service]
Type=simple
# 注意: 此配置仅适用于用户级服务 (systemctl --user)
# 生产模式: 使用 npm start (需要先运行 npm run build)
WorkingDirectory=%h/YATA/frontend
Environment="PATH=%h/YATA/frontend/node_modules/.bin:/usr/local/bin:/usr/bin:/bin"
Environment="NODE_ENV=production"
Environment="PORT=3000"
ExecStart=/usr/bin/npm start
Restart=on-failure
RestartSec=5s
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
