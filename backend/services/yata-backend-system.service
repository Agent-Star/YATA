[Unit]
Description=YATA Backend Service
After=network.target

[Service]
Type=simple
# 请根据实际情况修改用户名（EC2 通常是 ubuntu 或 ec2-user）
User=ec2-user
# 请根据实际情况修改工作目录路径
WorkingDirectory=/home/ec2-user/YATA/backend
Environment="PATH=/home/ec2-user/YATA/backend/.venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/ec2-user/YATA/backend/.venv/bin/python src/run_service.py
Restart=on-failure
RestartSec=5s
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

